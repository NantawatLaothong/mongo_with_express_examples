<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Single Farm</title>
</head>
<body>
        <h2><%= farm.name %></h2>
        <p><%= farm.city %></p>
        <p><%= farm.email %></p>
        <!-- printing out items of each farm -->
        <h3>Products</h3>
        <ul>
            <% farm.products.forEach(product => { %>
                <li><%= product.name %></li>
            <% }) %>
        </ul>
        <a href="/farms/<%= farm._id %>/products/new">Add new product</a>
    <a href="/farms">back</a>
</body>
</html>