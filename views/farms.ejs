<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farm</title>
</head>
<body>
    <h1>Farms</h1>
    <a href="/farms/new">Create a new farm</a>
    <ul>
        <% farms.forEach(farm => { %>
            <li>
                <h3><a href="/farms/<%= farm._id %>"><%= farm.name %></a></h3>
                <p><%= farm.city %></p>
                <p><%= farm.email %></p>
            </li>
        <% }) %>
    </ul>
</body>
</html>